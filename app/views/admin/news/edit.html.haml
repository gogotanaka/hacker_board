%h1{style: 'color: red;'} ニュース編集用
= form_for @news, class: 'form-horizontal' do |f|
  - if @news.errors.any?
    #error_explanation
      %h2= "#{pluralize(@news.errors.count, "error")} prohibited this news from being saved:"
      %ul
        - @news.errors.full_messages.each do |msg|
          %li= msg
  .form-group.row
    = f.label :user_id, class: 'col-sm-2 control-label'
    .col-sm-4
      .form-control
        = @news.user.name
  .form-group.row
    = f.label :title, class: 'col-sm-2 control-label'
    .col-sm-4
      = f.text_field :title, class: 'form-control'
  .form-group.row
    = f.label :url, class: 'col-sm-2 control-label'
    .col-sm-4
      = f.text_field :url, class: 'form-control'
  .form-group.row
    = f.label :contents, class: 'col-sm-2 control-label'
    .col-sm-4
      = f.text_area :contents, class: 'form-control'
  .form-group.row
    = f.label :point, class: 'col-sm-2 control-label'
    .col-sm-4
      = f.text_area :point, class: 'form-control'
  .form-group.row
    .col-sm-2
      = f.submit 'ニュースを編集', class: 'btn btn-danger'
